<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="450.0" maxWidth="422.0" minHeight="450.0" minWidth="400.0" prefHeight="450.0" prefWidth="422.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sportbox.controller.EventCardController">
   <children>
      <VBox layoutX="-2.0" prefHeight="450.0" prefWidth="422.0">
         <children>
            <MenuBar fx:id="Menu" minHeight="30.0" minWidth="80.0" prefHeight="30.0" prefWidth="385.0">
               <menus>
                  <Menu fx:id="Menu_event" mnemonicParsing="false" text="События" />
                  <Menu fx:id="Menu_student" mnemonicParsing="false" text="Студенты" />
               </menus>
               <VBox.margin>
                  <Insets right="5.0" />
               </VBox.margin>
            </MenuBar>
            <VBox prefHeight="294.0" prefWidth="422.0" spacing="10.0">
               <children>
                  <TextField fx:id="nameTextField" editable="false" promptText="Название" />
                  <TextField fx:id="kindOfSportTextField" editable="false" promptText="Вид спорта" />
                  <DatePicker fx:id="datePicker" editable="false" prefHeight="25.0" prefWidth="402.0" promptText="Дата проведения">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></DatePicker>
                  <TextField fx:id="levelTextField" editable="false" promptText="Уровень события" />
                  <TableView fx:id="tableCompetitions">
                    <columns>
                      <TableColumn fx:id="name_competition" editable="false" minWidth="-Infinity" prefWidth="401.0" resizable="false" text="Название состязания" />
                    </columns>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="backButton" maxHeight="30.0" maxWidth="115.0" minHeight="30.0" minWidth="40.0" mnemonicParsing="false" onAction="#backButtonAction" prefHeight="30.0" prefWidth="115.0" text="Назад">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="changeButton" maxHeight="30.0" maxWidth="126.0" minHeight="30.0" minWidth="40.0" mnemonicParsing="false" onAction="#changeButtonAction" prefHeight="30.0" prefWidth="126.0" text="Изменить" />
                  <Button fx:id="saveButton" disable="true" maxHeight="30.0" maxWidth="126.0" minHeight="30.0" minWidth="40.0" mnemonicParsing="false" onAction="#saveButtonAction" prefHeight="30.0" prefWidth="126.0" text="Сохранить" visible="false" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" prefHeight="43.0" prefWidth="406.0" spacing="10.0">
               <children>
                  <TextField fx:id="addCompetitionTextField" promptText="Введите название" />
                  <Button fx:id="addCompetitionButton" mnemonicParsing="false" onAction="#addCompetitionButtonAction" prefHeight="26.0" prefWidth="162.0" text="Добавить состязание" />
               </children>
               <padding>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
