               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </Text>
            <TableView prefHeight="178.0" prefWidth="342.0">
              <columns>
                <TableColumn fx:id="name_event" prefWidth="114.39996337890625" text="Название события" />
                <TableColumn fx:id="name_competition" prefWidth="182.40003967285156" text="Название соревнования" />
                  <TableColumn fx:id="place" prefWidth="82.39996337890625" text="Место" />
              </columns>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TableView>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonAction" prefHeight="25.0" prefWidth="75.0" text="Назад" />
                  <Button fx:id="changeButton" mnemonicParsing="false" onAction="#changeButtonAction" prefHeight="25.0" prefWidth="75.0" text="Изменить" />
                  <Button fx:id="saveButton" disable="true" mnemonicParsing="false" onAction="#saveButtonAction" prefHeight="25.0" prefWidth="75.0" text="Сохранить" visible="false" />
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
