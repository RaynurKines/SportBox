      <VBox prefHeight="450.0" prefWidth="400.0">
         <children>
            <MenuBar fx:id="Menu" minHeight="30.0" minWidth="80.0" prefHeight="30.0" prefWidth="400.0">
               <menus>
                  <Menu fx:id="Menu_event" mnemonicParsing="false" text="События" />
                  <Menu fx:id="Menu_student" mnemonicParsing="false" text="Студенты" />
               </menus>
            </MenuBar>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
               <children>
                  <TextField fx:id="lastnameTextField" editable="false" promptText="Фамилия" />
                  <TextField fx:id="nameTextField" editable="false" promptText="Имя" />
                  <TextField fx:id="patronymicTextField" editable="false" promptText="Отчество" />
                  <TextField fx:id="sexTextField" editable="false" promptText="Пол" />
                  <TextField fx:id="groupTextField" editable="false" promptText="Группа" />
                  <TextField fx:id="phoneTextField" editable="false" promptText="Телефон" />
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="5.0" />
               </VBox.margin>
            </VBox>
